{
  "name": "Ruscord",
  "version": "1.2.2",
  "description": "Общайся и играй с друзьями в Ruscord",
  "homepage": "https://github.com/dvyt/Ruscord-linux-version",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder -l",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint .",
    "test": "jest"
  },
  "build": {
    "appId": "com.ruscord.linux",
    "publish": {
      "provider": "github",
      "owner": "dvyt",
      "repo": "Ruscord-linux-version"
    },
    "productName": "Ruscord",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "asar": true,
    "files": [
      "main.js",
      "about.html",
      "assets/**/*"
    ],
    "linux": {
      "target": ["AppImage", "deb", "rpm", "tar.gz"],
      "icon": "assets/icon.png",
      "category": "Network",
      "maintainer": "dvyt <zapretsystem445@proton.me>, XZY <zzywww@proton.me>",
      "desktop": {
        "Name": "Ruscord",
        "Comment": "Free and open-source communication platform",
        "Type": "Application",
        "Categories": "Network;Chat;"
      }
    },
    "author": {
      "name": "dvyt, XZY",
      "email": "zapretsystem445@proton.me"
    },
    "license": "AGPLv3",
    "repository": {
      "type": "git",
      "url": "https://github.com/dvyt/Ruscord-linux-version.git"
    },
    "bugs": {
      "url": "https://github.com/dvyt/Ruscord-linux-version/issues"
    },
    "keywords": ["ruscord", "electron", "linux", "chat", "gaming", "open-source", "agplv3","russcord"],
    "engines": {
      "node": ">=20.0.0"
    },
    "resolutions": {
      "minimatch": "^9.0.5",
      "rimraf": "^5.0.10",
      "glob": "^10.4.5"
    },
    "devDependencies": {
      "electron": "^36.4.0",
      "electron-builder": "^26.3.0",
      "eslint": "^9.13.0",
      "eslint-config-standard": "^17.1.0",
      "eslint-plugin-import": "^2.31.0",
      "eslint-plugin-node": "^11.1.0",
      "eslint-plugin-promise": "^7.1.0",
      "prettier": "^3.3.3",
      "jest": "^29.7.0"
    },
    "dependencies": {
      "electron-store": "^10.0.3",
      "electron-updater": "^6.7.0",
      "electron-log": "^6.2.1",
      "electron-is-dev": "^3.0.1"
    }
  }
}